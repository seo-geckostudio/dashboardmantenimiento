# Dashboard Environment Configuration

# Application Settings
APP_NAME="WordPress Operations Dashboard"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wpops
DB_USER=wpops
DB_PASS=secure_password

# Session Configuration
SESSION_NAME=wpops_session
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
CSRF_TOKEN_NAME=csrf_token
PASSWORD_HASH_ALGO=PASSWORD_ARGON2ID

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=../logs/dashboard.log
LOG_MAX_FILES=30

# Twig Template Settings
TWIG_CACHE_PATH=../cache/twig
TWIG_AUTO_RELOAD=true
TWIG_DEBUG=true

# CORS Settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# API Settings
API_RATE_LIMIT=100
API_RATE_WINDOW=3600
API_TOKEN_EXPIRY=86400

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,txt,log

# Cache Settings
CACHE_DRIVER=file
CACHE_PATH=../cache/data
CACHE_DEFAULT_TTL=3600

# External Services
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_FROM=noreply@example.com
NOTIFICATION_EMAIL_TO=admin@example.com

# SMTP Configuration (if email notifications enabled)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Monitoring Settings
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_ENDPOINT=/metrics

# Development Settings
DEV_TOOLBAR=true
DEV_PROFILER=false
DEV_MOCK_AUTH=false

# Agent Integration
AGENT_API_URL=http://localhost:8081/api
AGENT_API_TOKEN=your-agent-api-token
AGENT_TIMEOUT=30

# WordPress CLI Settings
WP_CLI_PATH=/usr/local/bin/wp
WP_CLI_TIMEOUT=300

# Job Processing
JOB_QUEUE_DRIVER=database
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=300

# Pagination Settings
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# UI Settings
THEME=default
SIDEBAR_COLLAPSED=false
AUTO_REFRESH_INTERVAL=30000

# Feature Flags
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_FILTERS=true
FEATURE_EXPORT_DATA=true
FEATURE_AUDIT_LOG=true