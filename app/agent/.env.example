# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=wpops
DB_USER=wpops
DB_PASS=wpops_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log

# WordPress Paths
WP_SITES_ROOT=/var/www
WP_CLI_PATH=/usr/local/bin/wp

# Backup Configuration
BACKUP_DIR=/var/backups/wpops
BACKUP_RETENTION_DAYS=30

# Job Processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=3600

# Security
ALLOWED_COMMANDS=wp,find,tar,chmod,chown
SANDBOX_MODE=true

# Notifications
NOTIFICATION_EMAIL=admin@example.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ENCRYPTION=tls

# Monitoring
HEALTH_CHECK_INTERVAL=300
METRICS_ENABLED=true

# Development
DEBUG=false
ENVIRONMENT=production